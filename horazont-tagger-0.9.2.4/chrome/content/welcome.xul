<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<!DOCTYPE window SYSTEM "chrome://tagger/locale/welcome.dtd">
<window id="tagger-welcome"
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  title="&tagger.welcome.headline;">
  <groupbox>
    <vbox>
      <text value="&tagger.welcome.headline;" style="font-size: x-large;"/>
      <text value="&tagger.welcome.description;" style="font-weight: bold;"/>
      <separator class="thin"/>
      <text value="&tagger.welcome.features;" style="font-size: large;"/>
      <text value="&tagger.welcome.feature1;" style="margin: 0.3em; margin-left: 2.5em;"/>
      <text value="&tagger.welcome.feature2;" style="margin: 0.3em; margin-left: 2.5em;"/>
      <text value="&tagger.welcome.feature3;" style="margin: 0.3em; margin-left: 2.5em;"/>
      <text value="&tagger.welcome.feature4;" style="margin: 0.3em; margin-left: 2.5em;"/>
      <text value="&tagger.welcome.feature5;" style="margin: 0.3em; margin-left: 2.5em;"/>
      <text value="&tagger.welcome.feature6;" style="margin: 0.3em; margin-left: 2.5em;"/>
      <text value="&tagger.welcome.feature7;" style="margin: 0.3em; margin-left: 2.5em;"/>
      <separator class="thin"/>
      <text value="&tagger.welcome.howtouse;" style="font-size: large;"/>
      <description>&tagger.welcome.howtouse.description;</description>
      <description style="font-style: italic">&tagger.welcome.howtouse.noteaboutfocustrack;</description>
      <description>&tagger.welcome.howtouse.tooltips;</description>
      <description>&tagger.welcome.about;</description>
      <separator class="thin"/>
      <hbox>
        <button label="&tagger.welcome.stoptalking;" onclick="window.close();" style="font-weight: bold"/>
      </hbox>
    </vbox>
  </groupbox>
</window>
